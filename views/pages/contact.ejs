    </div>

    <div>
      <label for="subject" class="block text-sm font-medium mb-1">Sujet</label>
      <input type="text" id="subject" name="subject" required
        class="w-full px-4 py-2 rounded bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-red-500">
    </div>

    <div>
      <label for="message" class="block text-sm font-medium mb-1">Message</label>
      <textarea id="message" name="message" rows="4" required
        class="w-full px-4 py-2 rounded bg-gray-800 text-white border border-gray-700 focus:ring-2 focus:ring-red-500"></textarea>
    </div>

    <div class="text-center">
      <button type="submit"
        class="bg-red-600 hover:bg-red-700 px-6 py-2 rounded-full text-white transition hover:scale-105 duration-300">
        Envoyer
      </button>
    </div>
  </form>

